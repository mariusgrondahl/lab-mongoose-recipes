<h1>Edit {{recipe.title}}</h1>
<a href="/">Back</a>
<div class="flex-container">

  <form action="/edit/{{recipe._id}}" method="POST" >
    <input type="text" name="title" value="{{recipe.title}}">
    <input type="text" name="cuisine" value="{{recipe.cuisine}}">
    <select name="level">
        <option value="Easy Peasy">Easy Peasy</option>
        <option value="Amateur">Amateur</option>
         <option value="Chef">Chef</option>
         <option value="Chef">UltraPro Chef</option>
    </select>
    <input type="text" name="ingredients" value="{{recipe.ingredients}}">
    <input type="text" name="dishType" value="{{recipe.dishType}}">
    <input type="text" name="image" value="{{recipe.image}}">
    <input type="number" name="duration" value="{{recipe.duration}}">
    <input type="text" name="creator" value="{{recipe.creator}}">

    <button type="submit">Update Recipe</button>
</form>

  </div>


